@model CreateEmployeeDto
@{
    ViewData["Title"] = "Create";
}

<div class="justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4">Create Employee</h1>
    <form method="post" asp-controller="Employee" asp-action="Create">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group mb-3">
        <label class="form-label" asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name" />
        <span class="alert-danger " asp-validation-for="Name"></span>
        </div>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="Email">Email</label>
            <input class="form-control" asp-for="Email" />
            <span class="alert-danger " asp-validation-for="Email"></span>
        </div>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="Address">Address</label>
            <input class="form-control" asp-for="Address" />
            <span class="alert-danger " asp-validation-for="Address"></span>
        </div>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="PhoneNumber">Phone Number</label>
            <input class="form-control" asp-for="PhoneNumber" />
            <span class="alert-danger " asp-validation-for="PhoneNumber"></span>
        </div>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="Age">Age</label>
            <input class="form-control" asp-for="Age" />
            <span class="alert-danger " asp-validation-for="Age"></span>
        </div>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="Salary">Salary</label>
            <input class="form-control" asp-for="Salary" />
            <span class="alert-danger " asp-validation-for="Salary"></span>
        </div>

        <div class="form-group mb-3">
            <label class="form-label" asp-for="HiringDate">Hiring Date</label>
            <input type="date" asp-for="HiringDate" class="form-control" />
        </div>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="Gender">Gender</label>

        </div>
        <div>
            @foreach (Gender genderOption in Enum.GetValues(typeof(Gender)))
            {
                <div class="form-check form-check-inline">
                    <input class="form-check-input " type="radio" asp-for="Gender" value="@genderOption" />
                    <label class="form-check-label">@genderOption</label>

                </div>

            }
            <span asp-validation-for="Gender" class="text-danger"></span>

        </div>
        <div class="form-group mb-3">
            <label asp-for="EmployeeType">EmployeeType</label>
            <select asp-for="EmployeeType" asp-items="Html.GetEnumSelectList<EmployeeType>()" class="form-control">
                <option >Select Employee Type</option>
            </select>
            <span asp-validation-for="EmployeeType" class="text-danger"></span>
        </div>
        <div class="form-group mb-3 ">
            <input asp-for="IsActive" type="checkbox" class="form-check-input" />
            <label asp-for="IsActive" class="col-form-label">IsActive</label>
        </div>
      

        
        <div class="form-buttons mt-3 mx-auto ">
            @* <button type="submit" class="btn btn-primary">Create </button> *@
            <input class="btn btn-primary " type="submit" value="Create"/>
            <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-dark">Back To List</a>
          
        </div>
    </form>
</div>

